      \textbf{$artisti.nome$}%
      $if(artisti.ruolo)$\\[0.2em]\textit{$artisti.ruolo$}$endif$%
      $if(artisti.qualifica)$\\[0.2em]\textit{$artisti.qualifica$}$endif$
    \end{minipage}%
    $sep$\hfill%
    $endfor$
    \par
    \vskip 1.5em%
    $endif$
    
